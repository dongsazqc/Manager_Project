@model IEnumerable<Project_Manager.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1 class="page-title">Product List</h1>
<a href="@Url.Action("Create")" class="btn btn-add">Add New Product</a>

<table class="table product-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>  <!-- Cột mới để hiển thị hình ảnh -->
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>

                <!-- Hiển thị hình ảnh sản phẩm -->
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Product Image" style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                    else
                    {
                        <p>No Image Available</p>
                    }
                </td>
                <td>@product.Quantity</td>
                <td>
                    <!-- Các hành động như chỉnh sửa, xóa -->
                    <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-edit">Edit</a>
                    <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-delete">Delete</a>
                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-details">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tổng thể thiết kế */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #F0F2F5;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Tiêu đề */
    .page-title {
        text-align: center;
        color: #FF6F61;
        font-size: 3rem;
        margin-top: 50px;
        font-weight: bold;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    /* Nút thêm sản phẩm */
    .btn-add {
        display: inline-block;
        background-color: #FF6F61;
        color: white;
        padding: 12px 25px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        border-radius: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-add:hover {
            background-color: #FF3B2E;
            transform: scale(1.05);
        }

    /* Định dạng bảng */
    .product-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        margin-top: 30px;
        background-color: #FFFFFF;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

        .product-table th, .product-table td {
            padding: 20px;
            text-align: center;
            font-size: 16px;
            color: #555;
        }

        .product-table th {
            background-color: #FF6F61;
            color: white;
            font-weight: bold;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        /* Các hàng trong bảng */
        .product-table tr:nth-child(even) {
            background-color: #F7F7F7;
        }

        .product-table tr:hover {
            background-color: #FFE6E3;
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        /* Hình ảnh sản phẩm */
        .product-table img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

            .product-table img:hover {
                transform: scale(1.1);
            }

        /* Cột hành động */
        .product-table td a {
            display: inline-block;
            padding: 8px 15px;
            margin: 5px;
            color: white;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 20px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

    .btn-edit {
        background-color: #3498DB;
    }

    .btn-delete {
        background-color: #E74C3C;
    }

    .btn-details {
        background-color: #1ABC9C; /* Màu cho nút Details */
    }

    .btn-edit:hover {
        background-color: #2980B9;
        transform: scale(1.05);
    }

    .btn-delete:hover {
        background-color: #C0392B;
        transform: scale(1.05);
    }

    .btn-details:hover {
        background-color: #16A085; /* Màu khi hover vào nút Details */
        transform: scale(1.05);
    }

    /* Các hiệu ứng của các nút khi hover */
    .btn-edit, .btn-delete, .btn-details {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Cải thiện kiểu chữ cho các phần */
    p {
        font-size: 14px;
        color: #888;
    }
</style>
